        <!-- Mision Form -->
        <record model="ir.ui.view" id="purchase_view_form_inherit_exploracion">
            <field name="name">purchase.order.view.form.inherit.exploracion</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
